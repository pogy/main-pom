<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.opentae.data.mall.interfaces.ShiguGoodsSoldoutMapper">

    <!-- 查询 -->
    <select id="selectGoodsSoldoutById" resultType="com.opentae.data.mall.beans.ShiguGoodsSoldout">
      SELECT
        h.*
      FROM
        shigu_goods_soldout_${webSite} h
    WHERE
        h.goods_id = #{goodsId}
    </select>

</mapper>